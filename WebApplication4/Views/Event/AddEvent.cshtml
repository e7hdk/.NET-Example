@model WebApplication4.Models.AddEventViewModel

@{
    ViewBag.Title = "Add Event";
}

<div class="container mt-5">
    <div class="card bg-primary text-white">
        <div class="card-header">
            <h1>Add Event</h1>
        </div>
        <div class="card-body">
            <form id="addEventForm" method="post">
            <div class="form-group">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" asp-for="Title"/>
            </div>

            <div class="form-group">
                <label class="form-label">Location</label>
                <input type="text" class="form-control" asp-for="Location"/>
            </div>

            <div class="form-group">
                <label class="form-label">Date</label>
                <input type="datetime-local" class="form-control" asp-for="Date"/>
            </div>
            <div class="form-group">
                <label class="form-label">Details</label>
                <input type="text" class="form-control" asp-for="Details"/>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            </form>
        </div>
    </div>
</div>

