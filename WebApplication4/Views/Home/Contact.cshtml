@model WebApplication4.Models.AddEventViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Date</label>
        <input type="datetime-local" class="form-control" asp-for="Date"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Location</label>
        <input type="text" class="form-control" asp-for="Location"/>
    </div>
    <div class="mt-3">
        <label class="form-label">Details</label>
        <input type="text" class="form-control" asp-for="Details"/>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>