@model Event


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
</head>
<body>
<div class="container">
    <div class="row">
        
        <div class="col-md-6 bg-light">
            <h1>@Model.Title</h1>
    

            <p>Date: @Model.Date.ToShortDateString()</p>
            <p>Location: @Model.Location</p>
            <p>Details: @Model.Details</p>
            </div>
        
        <div class="col-md-6">
            <h2>Participants</h2>

            <ul id="participantList" class="list-grou">

            
                </ul>
            </div>
        </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <form id="addParticipantForm" class="mt-4">
                        <input type="hidden" id="eventId" name="eventId" value="@Model.Id"/>
                        <div class="form-row">
                            <div class="col">
                                <label for="firstName">First Name:</label>
                                <input type="text" id="firstName" name="firstName" required/>
                            </div>
                            <div class="col">
                                <label for="lastName">Last Name:</label>
                                <input type="text" id="lastName" name="lastName" required/>
                            </div>
                            <div class="col">
                                <label for="email">Email:</label>
                                <input type="email" id="email" name="email" required/>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Participant</button>
                    </form>
                    </div>
            </div>
            
        
</div>
</body>

@section Scripts {
    <script>
        $(function () {
            $.ajax({
                        url: '/Event/GetParticipants/',
                        type: 'GET',
                        data: { eventId: $('#eventId').val() },
                        success: function (data) {
                            $.each(data,  function (index, person){
                                $('#participantList').append('<li>' + person.firstName + ' ' + person.lastName + '</li>');
                                });
                        },
                        error: function (xhr, status, error) {
                            console.error(xhr.responseText);
                        }
                            
            })
                            
            $('#addParticipantForm').submit(function (e) {
                e.preventDefault();
                var eventId = $('#eventId').val();
                var firstName = $('#firstName').val();
                var lastName = $('#lastName').val();
                var email = $('#email').val();
                $.ajax({
                    url: '/Event/AddPersonToEvent/',
                    type: 'POST',
                    data: { eventId: eventId, firstName: firstName, lastName: lastName, email: email, isAttending: false},
                    success: function () {
                        $.ajax({
                        url: '/Event/GetParticipants/',
                        type: 'GET',
                        data: { eventId: $('#eventId').val() },
                        success: function (data) {
                             $('#participantList').empty();
                        $.each(data,  function (index, person){
                       
                        $('#participantList').append('<li>' + person.firstName + ' ' + person.lastName + '</li>');
                            });
                        },
                        error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                        }
                                                    
                        })
                        
                    },
                    error: function (xhr, status, error) {
                        console.error(xhr.responseText);
                    }
                });
            });
        });
        
    </script>
}